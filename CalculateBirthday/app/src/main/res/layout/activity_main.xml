<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginTop="108dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="176dp"
            android:layout_marginStart="176dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:hint="DD/MM/YYYY" android:layout_marginTop="144dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="96dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="96dp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="88dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="160dp"
            android:layout_marginStart="160dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>