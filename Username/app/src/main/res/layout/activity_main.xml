<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">

    <ImageView
            android:layout_marginTop="30dp"
            android:layout_height="80dp" android:layout_width="match_parent"
            android:src="@drawable/png1"
    />
    <Space
            android:layout_width="match_parent"
            android:layout_height="180dp" android:layout_weight="1"
    />
    <EditText
            android:layout_gravity="center_horizontal"
            android:layout_margin="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Username"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="380dp" android:layout_weight="1"
            android:layout_marginTop="-50dp"
            android:layout_marginBottom="605dp"/>
    <EditText
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="-605dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightEnd_toEndOf="parent" android:hint="Password"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText4"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="380dp" android:layout_weight="1"
            android:layout_marginBottom="-20dp"/>
    <Button
            android:textColor="@android:color/holo_orange_light"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="250dp"
            android:text="SUBMIT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button"/>
    <Button
            android:textColor="@android:color/holo_orange_light"
            android:layout_marginTop="-50dp"
            android:layout_marginLeft="250dp"
            android:layout_marginRight="50dp"
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button2"/>

</LinearLayout>