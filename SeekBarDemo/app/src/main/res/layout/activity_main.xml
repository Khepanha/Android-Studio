<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/page"
        tools:context=".MainActivity">


    <SeekBar
            android:layout_width="280dp"
            android:layout_height="75dp"
            android:id="@+id/red" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"/>
    <SeekBar
            android:layout_width="284dp"
            android:layout_height="75dp"
            android:id="@+id/seekBar" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="64dp"
            android:layout_marginTop="96dp"/>
    <TextView
            android:text="Volume"
            android:layout_width="225dp"
            android:layout_height="72dp"
            android:id="@+id/tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="92dp"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/blue"/>
    <SeekBar
            android:layout_width="280dp"
            android:layout_height="75dp"
            android:id="@+id/red" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"/>
    <SeekBar
            android:layout_width="282dp"
            android:layout_height="78dp"
            android:id="@+id/green" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/red" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"/>
    <SeekBar
            android:layout_width="280dp"
            android:layout_height="69dp"
            android:id="@+id/blue" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/green" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>